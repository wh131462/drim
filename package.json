{
    "name": "drim-monorepo",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "uni",
        "dev:h5": "uni",
        "dev:mp-weixin": "uni -p mp-weixin",
        "build:h5": "uni build",
        "build:mp-weixin": "uni build -p mp-weixin",
        "type-check": "vue-tsc --noEmit",
        "prepare": "husky",
        "server:dev": "pnpm --filter drim-server dev",
        "server:build": "pnpm --filter drim-server build",
        "db:generate": "pnpm --filter drim-server db:generate",
        "db:migrate": "pnpm --filter drim-server db:migrate",
        "db:seed": "pnpm --filter drim-server db:seed",
        "db:studio": "pnpm --filter drim-server db:studio",
        "docker:up": "pnpm --filter drim-server docker:up",
        "docker:down": "pnpm --filter drim-server docker:down",
        "docker:start": "pnpm --filter drim-server docker:start",
        "docker:stop": "pnpm --filter drim-server docker:stop"
    },
    "dependencies": {
        "@dcloudio/uni-app": "3.0.0-4080720251210001",
        "@dcloudio/uni-app-harmony": "3.0.0-4080720251210001",
        "@dcloudio/uni-app-plus": "3.0.0-4080720251210001",
        "@dcloudio/uni-components": "3.0.0-4080720251210001",
        "@dcloudio/uni-h5": "3.0.0-4080720251210001",
        "@dcloudio/uni-mp-alipay": "3.0.0-4080720251210001",
        "@dcloudio/uni-mp-baidu": "3.0.0-4080720251210001",
        "@dcloudio/uni-mp-harmony": "3.0.0-4080720251210001",
        "@dcloudio/uni-mp-jd": "3.0.0-4080720251210001",
        "@dcloudio/uni-mp-kuaishou": "3.0.0-4080720251210001",
        "@dcloudio/uni-mp-lark": "3.0.0-4080720251210001",
        "@dcloudio/uni-mp-qq": "3.0.0-4080720251210001",
        "@dcloudio/uni-mp-toutiao": "3.0.0-4080720251210001",
        "@dcloudio/uni-mp-weixin": "3.0.0-4080720251210001",
        "@dcloudio/uni-mp-xhs": "3.0.0-4080720251210001",
        "@dcloudio/uni-quickapp-webview": "3.0.0-4080720251210001",
        "pinia": "^3.0.4",
        "vue": "^3.4.21",
        "vue-i18n": "^9.1.9"
    },
    "pnpm": {
        "overrides": {
            "@vue/server-renderer": "^3.4.21",
            "typescript": "^5.0.0"
        },
        "peerDependencyRules": {
            "ignoreMissing": [
                "@dcloudio/types"
            ],
            "allowedVersions": {
                "jest": "29",
                "jest-environment-node": "29",
                "vue": ">=3.4.21",
                "@dcloudio/types": ">=3.4.19"
            }
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "@dcloudio/types": "^3.4.8",
        "@dcloudio/uni-automator": "3.0.0-4080720251210001",
        "@dcloudio/uni-cli-shared": "3.0.0-4080720251210001",
        "@dcloudio/uni-stacktracey": "3.0.0-4080720251210001",
        "@dcloudio/vite-plugin-uni": "3.0.0-4080720251210001",
        "@eslint/js": "^9.39.2",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "@vue/runtime-core": "^3.4.21",
        "@vue/tsconfig": "^0.1.3",
        "commitizen": "^4.3.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-unused-imports": "^4.3.0",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.0",
        "sass": "^1.97.2",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.53.1",
        "vite": "5.2.8",
        "vue-tsc": "^2.0.0"
    }
}
