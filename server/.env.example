# 环境配置模板
# 复制此文件为 .env 并填入实际值

# ===== 服务配置 =====
PORT=3333
NODE_ENV=production
# 服务基础 URL（用于生成文件访问链接）
# 本地开发: http://localhost:3333
# 生产环境: https://your-domain.com
BASE_URL=http://localhost:3333

# ===== Docker 部署配置 =====
# GitHub 仓库名（用于拉取镜像）
GITHUB_REPOSITORY=wh131462/drim
# MySQL root 密码（请使用强密码）
MYSQL_ROOT_PASSWORD=your-strong-password

# ===== 数据库配置 =====
# 本地开发: mysql://root:password@localhost:3306/drim?charset=utf8mb4
# Docker 部署: mysql://root:${MYSQL_ROOT_PASSWORD}@mysql:3306/drim（由 docker-compose 自动配置）
DATABASE_URL="mysql://root:password@localhost:3306/drim?charset=utf8mb4"

# ===== JWT 配置 =====
# 生成方法: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# ===== 微信小程序配置 =====
WECHAT_APPID=your-wechat-appid
WECHAT_SECRET=your-wechat-secret
WECHAT_REMINDER_TEMPLATE_ID=your-wechat-template-id

# ===== AI 大模型配置 =====
AI_API_KEY=your-ai-api-key
AI_API_URL=https://api.example.com/v1
AI_MODEL=model-name
# API 格式: openai (默认) | dashscope (阿里云) | anthropic (Claude)
AI_API_FORMAT=openai

# === 常见 AI 服务配置示例 ===
